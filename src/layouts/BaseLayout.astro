---
import Footer from '@/components/l4/Footer.astro';
import Header from '@/components/l4/Header.astro';
import '@/styles/global.css';
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="flex flex-col min-h-screen custom-body">
    <Header />
    <slot />
    <div class="flex-1"></div>
    <Footer />
  </body>
</html>

<style lang="scss" is:global>
  body {
    margin: 0 auto;
    width: 100%;
    height: 100dvh; /* new unit */
    max-width: 65ch;
    padding: 1rem;
    line-height: 1.5;
  }
</style>
